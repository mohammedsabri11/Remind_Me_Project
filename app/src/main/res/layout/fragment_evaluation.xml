<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:layout_margin="10dp"
        android:background="@drawable/card_style"

        >
        <ImageButton
            android:id="@+id/editImageButton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/preview"

            android:layout_marginEnd="2dp"
            android:background="@drawable/baseline_edit_24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profilLayout"
            android:paddingVertical="15dp"
            android:paddingHorizontal="6dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="profile"

                android:padding="5dp"
                app:strokeWidth="3dp"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="11dp"
                android:layout_gravity="end"
                android:id="@+id/profile"
                app:strokeColor="@android:color/darker_gray"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:src="@drawable/profile"

                android:layout_marginStart="0dp"
                /> <ImageButton
                android:id="@+id/chooseProfile"
                android:layout_width="20dp"
                android:contentDescription="profile"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
android:background="@drawable/baseline_edit_24"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>


            <TextView
                android:id="@+id/user_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/profile"

                android:text="@string/full_name"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:id="@+id/short_description"
                android:layout_height="36dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/profile"
                android:layout_marginTop="12dp"
                android:text="@string/full_name"
                android:layout_below="@id/user_name"
                android:textColor="@color/gray3"
                android:layout_alignParentEnd="true"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/shortDescriptionEditText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:gravity="center_vertical"
                android:layout_toEndOf="@id/profile"
                android:layout_marginTop="12dp"
                android:text="@string/full_name"
                android:visibility="gone"
                android:layout_below="@id/user_name"
                android:textColor="@color/gray3"
                android:layout_alignParentEnd="true"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shortDescriptionEditText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:id="@+id/saveChangeButton"
                android:text="@string/save"
                android:paddingHorizontal="15dp"
android:layout_marginBottom="3dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#ECECEC"
            android:layout_below="@id/profilLayout"
            android:layout_marginTop="5dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:layout_below="@id/divider"
            android:paddingVertical="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/specialityIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/preview"

                    android:layout_marginEnd="2dp"
                    android:background="@drawable/baseline_history_edu_24" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/speciality"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/specialityIcon"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/consultantSpeciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/speciality"
                    android:textColor="@color/black"
                    android:layout_below="@id/specialityIcon"
                    android:layout_toEndOf="@id/specialityIcon"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                >
                <ImageView
                    android:id="@+id/experienceIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/preview"

                    android:layout_marginEnd="2dp"
                    android:background="@drawable/baseline_article_24" />
                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:layout_toEndOf="@id/experienceIcon"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/ExperienceYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/speciality"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_below="@id/experienceIcon"
                    android:layout_toEndOf="@id/experienceIcon"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/evaluationItem"
                >
                <ImageView
                    android:id="@+id/evaluationIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/preview"

                    android:layout_marginEnd="2dp"
                    android:background="@drawable/baseline_add_reaction_24" />
                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/evaluationItem"
                    android:layout_toEndOf="@id/evaluationIcon"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/evaluationCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/speciality"
                    android:layout_below="@id/evaluationIcon"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/evaluationIcon"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/prof2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
android:layout_below="@id/prof"
        android:layout_margin="10dp"
        android:background="@drawable/card_style"

        >

        <TextView
            android:textSize="16sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rating_and_review"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:textFontWeight="400"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <include android:layout_height="match_parent" android:layout_width="match_parent" android:layout_below="@id/prof2" android:layout_marginTop="5dp" layout="@layout/fragment_content"/>

</RelativeLayout>